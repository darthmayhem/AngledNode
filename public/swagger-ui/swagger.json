{
  "swagger": "2.0",
  "info": {
    "version": "0.1.0",
    "title": "AngledNode",
    "license": {
      "name": "MIT",
      "url": "http://mit-license.org/"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/app/config": {
      "get": {
        "summary": "Lists application config settings",
        "operationId": "appConfig",
        "tags": [
          "config"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "A listing of provided app config variables",
            "schema": {
              "$ref": "#/definitions/AppConfig"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/user/status": {
      "get": {
        "summary": "Returns the current user authentication status",
        "operationId": "userStatus",
        "tags": [
          "user"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "The current user authentication status",
            "schema": {
              "$ref": "#/definitions/UserStatus"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/user/update": {
      "post": {
        "summary": "Updates the passed user details",
        "operationId": "userUpdate",
        "produces": [
          "application/json"
        ],
        "tags": [
          "user"
        ],
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "description": "User details model to be updated",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The user details have been updated",
            "schema": {
              "$ref": "#/definitions/UserUpdate"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/user/register": {
      "post": {
        "summary": "Registers a new site user",
        "operationId": "userRegister",
        "produces": [
          "application/json"
        ],
        "tags": [
          "user"
        ],
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "description": "User details model to be registered",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserRegister"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The user has been created successfully",
            "schema": {
              "$ref": "#/definitions/UserUpdate"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "Logs in a user",
        "operationId": "userLogin",
        "produces": [
          "application/json"
        ],
        "tags": [
          "user"
        ],
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "description": "User login information",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserLogin"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The user has been successfully logged in",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/user/logout": {
      "get": {
        "summary": "Logs the current user out",
        "operationId": "userLogout",
        "tags": [
          "user"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "The current user authentication status",
            "schema": {
              "$ref": "#/definitions/UserStatus"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "AppConfig": {
      "required": [
        "appName",
        "appVersion"
      ],
      "properties": {
        "appName": {
          "type": "string"
        },
        "appVersion": {
          "type": "string"
        }
      }
    },
    "UserStatus": {
      "required": [
        "status"
      ],
      "properties": {
        "user": {
          "type": "object"
        },
        "status": {
          "type": "boolean"
        }
      }
    },
    "UserUpdate": {
      "required": [
        "user",
        "updated"
      ],
      "properties": {
        "user": {
          "type": "string"
        },
        "updated": {
          "type": "boolean"
        }
      }
    },
    "UserRegister": {
      "required": [
        "username",
        "email",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        }
      }
    },
    "UserLogin": {
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "User": {
      "required": [
        "username"
      ],
      "properties": {
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        }
      }
    },
    "Error": {
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}